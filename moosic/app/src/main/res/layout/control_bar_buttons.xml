<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_buttons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="2dp">

    <ImageButton
        android:id="@+id/button_repeat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="@color/windowBackground"
        android:contentDescription="Repeat"
        android:onClick="repeatButtonClick"
        android:src="@drawable/ic_repeat_white_24dp" />

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/windowBackground"
        android:contentDescription="Skip Previous"
        android:onClick="backButtonClick"
        android:src="@drawable/ic_skip_previous_white_24dp" />

    <ImageButton
        android:id="@+id/button_playPause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@color/windowBackground"
        android:contentDescription="Play/Pause"
        android:onClick="playPauseButtonClick"
        android:src="@drawable/ic_pause_white_24dp" />


    <ImageButton
        android:id="@+id/button_forward"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/windowBackground"
        android:contentDescription="Skip Forward"
        android:onClick="forwardButtonClick"
        android:src="@drawable/ic_skip_next_white_24dp" />

    <ImageButton
        android:id="@+id/button_shuffle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="@color/windowBackground"
        android:contentDescription="Shuffle"
        android:onClick="shuffleButtonClick"
        android:src="@drawable/ic_shuffle_white_24dp" />

</LinearLayout>